import React, { useState, useEffect } from 'react';
import { useParams, useNavigate } from 'react-router-dom';
import { useAuthStatus } from '../../../hooks/useAuth';
import { useExpediente, useUpdateExpediente } from '../../../hooks/useExpedientes';
import { useIndiciosByExpediente } from '../../../hooks/useIndicios';
import { useEstados } from '../../../hooks/useEstados';
import { useUsuarios } from '../../../hooks/useUsuarios';

// Role IDs
const COORDINADOR = 3;

function CoordinadorExpedienteReview() {
  const { expedienteId } = useParams();
  const navigate = useNavigate();
  const { roleId, isAuthenticated } = useAuthStatus();
  const loggedInUserId = parseInt(localStorage.getItem('userId'), 10);

  const { data: expediente, loading: loadingExpediente, error: errorExpediente, refetch: refetchExpediente } = useExpediente(expedienteId);
  const { data: indicios, loading: loadingIndicios, error: errorIndicios, refetch: refetchIndicios } = useIndiciosByExpediente(expedienteId);
  const { data: estados, loading: loadingEstados, error: errorEstados } = useEstados();
  const { data: usuarios, loading: loadingUsuarios, error: errorUsuarios } = useUsuarios();
  const [updateExpediente, { loading: updating, error: updateError }] = useUpdateExpediente();

  const [justificacionRechazo, setJustificacionRechazo] = useState('');
  const [showRechazoInput, setShowRechazoInput] = useState(false);

  // Find Estado IDs
  const estadoAprobadoId = estados?.find(e => e.nombre.toLowerCase() === 'aprobado')?.id;
  const estadoRechazadoId = estados?.find(e => e.nombre.toLowerCase() === 'rechazado')?.id;

  const getEstadoName = (estadoId) => {
    const estado = estados?.find(e => e.id === estadoId);
    return estado ? estado.nombre : 'Desconocido';
  };

  const getUserName = (userId) => {
    const user = usuarios?.find(u => u.id === userId);
    return user ? user.nombre : 'Desconocido';
  };

  useEffect(() => {
    if (!isAuthenticated || roleId !== COORDINADOR) {
      navigate('/unauthorized');
    }
  }, [isAuthenticated, roleId, navigate]);

  useEffect(() => {
    if (!loadingExpediente && expediente) {
      // Ensure the coordinator is assigned to this expediente
      if (expediente.coordinador_id !== loggedInUserId) {
        alert('No tienes permiso para revisar este expediente.');
        navigate('/coordinador/expedientes/review');
      }
    }
  }, [expediente, loggedInUserId, navigate, loadingExpediente]);

  const handleApprove = async () => {
    if (!estadoAprobadoId) {
      alert('Error: No se encontró el estado "aprobado".');
      return;
    }
    if (expedienteId) {
      try {
        await updateExpediente(parseInt(expedienteId, 10), {
          estado_id: estadoAprobadoId,
          justificacion_rechazo: null, // Clear any previous rejection justification
        });
        alert('Expediente aprobado con éxito!');
        navigate('/coordinador/expedientes/review');
      } catch (err) {
        console.error('Error al aprobar expediente:', err);
      }
    }
  };

  const handleReject = async () => {
    if (!showRechazoInput) {
      setShowRechazoInput(true);
      return;
    }
    if (!justificacionRechazo.trim()) {
      alert('Debe proporcionar una justificación para el rechazo.');
      return;
    }
    if (!estadoRechazadoId) {
      alert('Error: No se encontró el estado "rechazado".');
      return;
    }
    if (expedienteId) {
      try {
        await updateExpediente(parseInt(expedienteId, 10), {
          estado_id: estadoRechazadoId,
          justificacion_rechazo: justificacionRechazo,
        });
        alert('Expediente rechazado con éxito!');
        navigate('/coordinador/expedientes/review');
      } catch (err) {
        console.error('Error al rechazar expediente:', err);
      }
    }
  };

  if (loadingExpediente || loadingIndicios || loadingEstados || loadingUsuarios) {
    return <div className="p-6 text-center">Cargando detalles del expediente...</div>;
  }

  if (errorExpediente) {
    return <div className="p-6 text-center text-red-600">Error al cargar expediente: {errorExpediente.message}</div>;
  }
  if (errorIndicios) {
    return <div className="p-6 text-center text-red-600">Error al cargar indicios: {errorIndicios.message}</div>;
  }
  if (errorEstados || errorUsuarios) {
    return <div className="p-6 text-center text-red-600">Error al cargar datos de apoyo.</div>;
  }

  if (!expediente) {
    return <div className="p-6 text-center text-gray-600">Expediente no encontrado.</div>;
  }

  return (
    <div className="p-6 bg-white shadow rounded-lg">
      <h2 className="text-2xl font-bold mb-4 text-gray-800">Revisar Expediente: {expediente.descripcion}</h2>
      <div className="mb-6 border p-4 rounded-md">
        <h3 className="text-xl font-semibold mb-2">Detalles del Expediente</h3>
        <p><strong>Descripción:</strong> {expediente.descripcion}</p>
        <p><strong>Fecha de Creación:</strong> {new Date(expediente.created_at).toLocaleDateString()}</p>
        <p><strong>Estado:</strong> {getEstadoName(expediente.estado_id)}</p>
        <p><strong>Técnico:</strong> {getUserName(expediente.tecnico_id)}</p>
        <p><strong>Coordinador:</strong> {getUserName(expediente.coordinador_id)}</p>
        {expediente.justificacion_rechazo && (
          <p className="text-red-600"><strong>Justificación de Rechazo:</strong> {expediente.justificacion_rechazo}</p>
        )}
      </div>

      <h3 className="text-xl font-semibold mb-2">Indicios Asociados</h3>
      {indicios.length === 0 ? (
        <p className="text-gray-600 mb-6">No hay indicios asociados a este expediente.</p>
      ) : (
        <div className="overflow-x-auto mb-6 border rounded-md">
          <table className="min-w-full divide-y divide-gray-200">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descripción</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Color</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tamaño</th>
                <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ubicación</th>
              </tr>
            </thead>
            <tbody className="bg-white divide-y divide-gray-200">
              {indicios.map(indicio => (
                <tr key={indicio.id}>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{indicio.descripcion}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{indicio.color}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{indicio.tamanio}</td>
                  <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{indicio.ubicacion}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      )}

      {expediente.estado_id === estadoAprobadoId || expediente.estado_id === estadoRechazadoId ? (
          <p className="text-lg font-semibold text-gray-700">Expediente {getEstadoName(expediente.estado_id).toLowerCase()}</p>
      ) : (
        <div className="flex space-x-4">
            <button
                onClick={handleApprove}
                className="px-6 py-3 bg-green-600 text-white rounded-md hover:bg-green-700 disabled:opacity-50"
                disabled={updating}
            >
                {updating ? 'Aprobando...' : 'Aprobar Expediente'}
            </button>
            <button
                onClick={handleReject}
                className="px-6 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 disabled:opacity-50"
                disabled={updating}
            >
                {updating ? 'Rechazando...' : 'Rechazar Expediente'}
            </button>
        </div>
      )}


      {showRechazoInput && (
        <div className="mt-4 p-4 border rounded-md bg-red-50">
          <label htmlFor="justificacion_rechazo" className="block text-sm font-medium text-red-700">Justificación de Rechazo</label>
          <textarea
            id="justificacion_rechazo"
            className="mt-1 block w-full px-3 py-2 border border-red-300 rounded-md shadow-sm h-24 resize-none"
            value={justificacionRechazo}
            onChange={(e) => setJustificacionRechazo(e.target.value)}
            required
          ></textarea>
          <button
            onClick={handleReject} // Re-call handleReject to finalize with justification
            className="mt-3 px-4 py-2 bg-red-700 text-white rounded-md hover:bg-red-800 disabled:opacity-50"
            disabled={updating}
          >
            Confirmar Rechazo
          </button>
        </div>
      )}

      {updateError && <p className="text-red-500 text-sm mt-2">Error: {updateError.message || 'Error al actualizar expediente'}</p>}
      
      <button
        onClick={() => navigate('/coordinador/expedientes/review')}
        className="mt-6 px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
      >
        Volver a la Lista
      </button>
    </div>
  );
}

export default CoordinadorExpedienteReview;
